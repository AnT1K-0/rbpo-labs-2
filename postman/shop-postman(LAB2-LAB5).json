              }
            }
          },
          "response": []
        },
        {
          "name": "Login USER (получить пару access/refresh)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "login"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"user1@example.com\",\n  \"password\": \"Pa$$w0rd!1\"\n}\n",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// USER токены",
                  "var json = pm.response.json();",
                  "pm.collectionVariables.set(\"userAccessToken\", json.accessToken);",
                  "pm.collectionVariables.set(\"userRefreshToken\", json.refreshToken);",
                  "// Для сценария со старым refresh, сначала используем userRefreshToken",
                  "pm.collectionVariables.set(\"oldRefreshToken\", json.refreshToken);",
                  "pm.test(\"user accessToken exists\", function () {",
                  "    pm.expect(json.accessToken).to.be.a(\"string\").and.not.empty;",
                  "});",
                  "pm.test(\"user refreshToken exists\", function () {",
                  "    pm.expect(json.refreshToken).to.be.a(\"string\").and.not.empty;",
                  "});"
                ]
              }
            }
          ]
        },
